<div class="auth-container">
  <h2>Реєстрація</h2>

  <% if resource.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(resource.errors.count, "помилка") %> не дозволили зберегти акаунт:</h3>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: resource,
                url: registration_path(resource_name),
                local: true,
                data: { turbo: false } do |f| %>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div>
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Повторіть пароль" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <%= f.submit "Створити акаунт" %>
  <% end %>

  <div class="auth-links">
    <%= link_to "Увійти", new_user_session_path %>
    <%= link_to "Забули пароль?", new_user_password_path %>
  </div>
</div>
